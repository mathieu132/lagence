{% extends 'base.html.twig' %}

{% block title %}Abonne{% endblock %}

{% block body %}
    <h1>Abonne</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ abonne.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ abonne.pseudo }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ abonne.rolesTexte}}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ abonne.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ abonne.nom }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <th>Lieu</th>
            <th>Début le</th>
            <th>Fin le</th>
        </thead>
        <tbody>
            {% for selection in abonne.selections %}
                <tr>
                    <td>{{ selection.lieu.nomLieu ~ " - " ~ selection.lieu.prix }}</td>
                    <td>{{ selection.dateDebut|date("d/m/Y") }}</td>
                    <td>{{ selection.dateFin|date("d/m/Y") }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('abonne_index') }}" class="btn btn-secondary m-4">Retour à la liste</a>

    <a href="{{ path('abonne_edit', {'id': abonne.id}) }}" class="btn btn-success m-2">Modifier</a>

    {{ include('abonne/_delete_form.html.twig') }}
{% endblock %}
